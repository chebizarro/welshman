{
  "name": "@welshman/signer",
  "version": "0.0.5",
  "author": "hodlbod",
  "license": "MIT",
  "description": "A nostr signer implemenation supporting several login methods.",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "build"
  ],
  "types": "./build/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/src/index.d.ts",
      "import": "./build/src/index.mjs",
      "require": "./build/src/index.cjs"
    }
  },
  "scripts": {
    "pub": "npm run lint && npm run build && npm publish",
    "build": "gts clean && tsc-multi",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "devDependencies": {
    "gts": "^5.0.1",
    "tsc-multi": "^1.1.0",
    "typescript": "~5.1.6"
  },
  "dependencies": {
    "@welshman/lib": "0.0.17",
    "@welshman/net": "0.0.22",
    "@welshman/util": "0.0.32",
    "nostr-tools": "^2.7.2"
  },
  "peerDependencies": {
    "nostr-signer-capacitor-plugin": "github:chebizarro/nostr-signer-capacitor-plugin"
  }
}
